<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">

    <dubbo:application name="dubbo-service"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <!--<dubbo:registry address="zookeeper://localhost:2181"/>-->

    <!-- dubbo接口去除注册中心，采用直连的方式  -->
    <dubbo:registry address="N/A"></dubbo:registry>


    <!--<dubbo:reference interface="com.abin.lee.dubbo.rpc.api.DubboService" id="dubboService" check="false"-->
                     <!--url="dubbo://localhost:20880" mock="return null" filter="hystrixFilter"/>-->
    <dubbo:reference interface="com.abin.lee.dubbo.rpc.api.DubboService" id="dubboService" check="false"
                     url="dubbo://localhost:20880" mock="return null" />

    <dubbo:reference interface="com.abin.lee.dubbo.rpc.api.GlobalService" id="globalService" check="false"
                     url="dubbo://localhost:20880" mock="return null">
        <dubbo:method name="findByParam" async="true"/>
    </dubbo:reference>

    <dubbo:reference interface="com.abin.lee.dubbo.rpc.api.CommonService" id="commonService" check="false"
                     url="dubbo://localhost:20880" mock="true" timeout="10000">
        <!--<dubbo:method name="create" async="true"/>-->
        <dubbo:method name="create" />
    </dubbo:reference>
    <!--<dubbo:reference interface="com.abin.lee.dubbo.rpc.api.CommonService" id="commonService" check="false"-->
                     <!--url="dubbo://localhost:20880" mock="return null" timeout="10000">-->
        <!--&lt;!&ndash;<dubbo:method name="create" async="true"/>&ndash;&gt;-->
        <!--<dubbo:method name="create" />-->
    <!--</dubbo:reference>-->


    <dubbo:consumer filter="logSessionFilter" timeout="9000"/>




</beans>
