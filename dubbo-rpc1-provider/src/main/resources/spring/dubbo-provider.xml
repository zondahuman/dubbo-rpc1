<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.abin.lee"/>

    <!-- 具体的实现bean -->
    <!--<bean id="dubboService" class="com.abin.lee.dubbo.rpc.provider.facade.DubboServiceImpl"/>-->
    <!--<bean id="globalService" class="com.abin.lee.dubbo.rpc.provider.facade.GlobalServiceImpl"/>-->
    <!--<bean id="commonService" class="com.abin.lee.dubbo.rpc.provider.facade.CommonServiceImpl"/>-->
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="dubbo-client"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.abin.lee.dubbo.rpc.api.DubboService" ref="dubboService" timeout="1"
                   filter="hystrixFilter">
        <dubbo:method name="say" retries="0"/>
        <dubbo:parameter key="ThreadPoolCoreSize" value="30"/>
    </dubbo:service>

    <dubbo:service interface="com.abin.lee.dubbo.rpc.api.GlobalService" ref="globalService"/>
    <dubbo:service interface="com.abin.lee.dubbo.rpc.api.CommonService" ref="commonService"/>


    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <!--<dubbo:registry address="zookeeper://localhost:2181"/>-->

    <!-- dubbo接口去除注册中心，采用直连的方式  -->
    <dubbo:registry address="N/A"></dubbo:registry>

    <dubbo:provider filter="logSessionFilter,trafficLimitFilter,hystrixFilter" timeout="9000"/>


</beans>